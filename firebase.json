{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/apple-app-site-association",
        "destination": "/apple-app-site-association.json"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
